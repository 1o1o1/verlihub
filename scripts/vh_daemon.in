VERLIHUB=$1
shift
PID=

trap "stop_hub" SIGQUIT SIGTERM SIGKILL SIGINT
trap "reload_hub" SIGHUP

function start_hub()
{
	$VERLIHUB $* &
	PID=$!
	wait $PID
	return $?
}

function stop_hub()
{
	if [ "_$PID" != "_" ]; then
		echo Killing hub..
		kill -3 $PID
		echo
	fi
}

function reload_hub()
{
	if [ "_$PID" != "_" ]; then
		echo Reloading hub..
		kill -SIGHUP $PID
		echo
		wait $PID
	fi
}

CODE=1
until [[ $CODE != 1 ]]; do
	start_hub $*
	CODE=$?
	if [[ $CODE == 1 ]]; then
		echo -n "-- Restarting in a while..."
		sleep 5;
		echo " Done."
	else
		echo -n "-- Stopping..."
		sleep 1
		echo " Done."
	fi;
done;

exit $CODE
